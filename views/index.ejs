<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>To-Do Manager</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="/js/script.js" type="text/javascript"></script>    
  </head>
  <script>
  
    let csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute("content");

    const updateTodo = (id) => {
      const bool = document.querySelector(`#checkbox-${id}`).checked
      console.log(bool)
      fetch(`/todos/${id}`, {
        method: "put",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          _csrf: csrfToken,
          completed: bool ,
        }),
      })
        .then((res) => {
          if (res.ok) {
            window.location.reload();
          }
        })
        .catch((err) => console.error(err));
    };


    const deleteTodo = (id) => {
      fetch(`/todos/${id}`, {
        method: "delete",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          _csrf: csrfToken,
        }),
      })
        .then((res) => {
          if (res.ok) {
            window.location.reload();
          }
        })
        .catch((err) => console.error(err));
    };

  </script>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <header><%- include('header.ejs') %></header>
        <form action="/todos" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input type="text" name="title" placeholder="What's next?" class="border border-gray-300 w-full rounded p-2 text-sm" required/>
            </div>
            <div class="flex-auto">
              <input type="date" name="dueDate" class="border border-gray-300 w-full rounded p-2 text-sm leading-4" value='<%= new Date().toLocaleDateString("en-CA"); %>' required/>
            </div>
            <div class="flex-none">
              <button type="submit" class="bg-green-600 text-white px-5 py-2 rounded font-medium mr-2 mb-2 py-1.5"> Add </button>
            </div>
          </div>
        </form>

        <%- include("todos.ejs", {title: "Overdue",data: overdue}) %>         
        <%- include("todos.ejs", {title: "Due Today",data: dueToday}) %>          
        <%- include("todos.ejs", {title: "Due Later",data: dueLater}) %>        
        <%- include("todos.ejs", {title: "Completed Items",data: completedItems}) %>
    
    
  </body>
</html>
